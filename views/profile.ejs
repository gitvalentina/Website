<% if (user) { %>
	<%- include('./partials/header_logueado') %>
	<% } else{ %>
	<%- include('./partials/header') %>
	<%} %>

<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
	<div class="row">
		<div class="img-container offset-3 col-2">
			<img src="<%= data.photo %>" alt="foto de perfil" class="foto-perfil">
		</div>
		<div class="data-container col-6">
			<div class="d-flex align-items-center ">
				<h1 class="main-title"><%= data.nombre_usuario %>
					<a href="/users/profile-edit/<%= user.id %>>">
						<i class="fas fa-cog"></i>
					</a>
				</h1>
			</div>
			<div> 
				<ul class="">
					<li><%= data.email %></li>
					<li> <%= data.producto.length%></li> 
					<li><%= data.comentario.length %> comentarios </li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Mis productos</h2>
		</div>
		<!-- Show mis productos -->
		<% if (data.producto.length == 0) {%>
			<h2 class="main-title">Todavia no tienes productos.</h2>
			<% }else { %>
		<% for (let i= 0; i < data.producto.length; i++) { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/product/<%data.producto[i].id%>">
					<figure class="product-box_image">
						<img class="img-cover" alt="foto producto" src="<%= data.producto[i].photo %>">
					</figure>
					<article class="product-box_data">
						<h2><%= data.producto[i].title %></h2>
						<p><%= data.producto[i].description %></p>
						<p><%= //data.comentario[i].content%></p>
					</article>
				</a> 
			</section>
		</div>
		<% }} %>
	</div>
</div>

<!-- /Footer -->
<%- include('./partials/footer.ejs')%>;