	<!-- Header -->
	<%- include('./partials/header.ejs')%>
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner-compu.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i= 0; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img class="img-cover" src="<%=products[i].photo %>" >
						</figure>
						<article class="product-box_data">
							<h2><%=products[i].title %></h2>
							<p><%products[i].description %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
		<% } %>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img class="img-cover" src="/images/products/HP15.jpg" alt="Hp">
						</figure>
						<article class="product-box_data">
							<h2>Hp Ultimate</h2>
							<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque delectus ex</p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
	</div>
	<!-- /Más comentados -->

<%- include('./partials/footer.ejs')%>;

	