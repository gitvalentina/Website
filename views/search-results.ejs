<% if (user) { %>
	<%- include('./partials/header_logueado') %>
	<% } else{ %>
	<%- include('./partials/header') %>
	<%} %>

<!-- Novedades -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="product-detail-title">Resultados de b√∫squeda</h2>
		</div>
		<!-- Show the "ultimos" products -->
		<% for (let i= 0; i < products.length; i++) { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/product/<%= products[i].id%>">
					<figure class="product-box_image">
						<img class="img-cover" src="<%=products[i].photo %>">
					</figure>
					<article class="product-box_data">
						<h2><%=products[i].title %></h2>
						<p><%=products[i].description %></p>
						<p>Comentarios: <%= products[i].comentario.length %> </p>
						<p><strong> <a href="/users/profile/<%= products[i].usuario.id %>"><%= products[i].usuario.nombre_usuario %> </a> </strong></p>
					</article>
				</a>
			</section>
		</div>
		<% } %>
	</div>
</div>

<%- include('./partials/footer.ejs')%>;