<% if (user) { %>
	<%- include('./partials/header_logueado') %>
	<% } else{ %>
	<%- include('./partials/header') %>
	<%} %>
<!-- Novedades -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title"><%= data.title%></h2>
			<figure class="product-box_image">
				<img class="product-detail-img" src="<%= data.photo %>">
			</figure>
		</div>
		<!-- Show the "ultimos" products -->
		<h2>Comments</h2>
		<% if (locals.user && user.id == user.user_id) {%>
			<a class="btn btn-primary" href="/product/<%= data.id %>/edit">Edit</a>
			<div>
				<form class="formularios" action="/<%= data.id %>/delete" method="post">
					<input type="submit" value="Borrar">
				</form>
				
			</div>
		<% } %> 
	</div>
</div>
<%- include('./partials/footer.ejs')%>;