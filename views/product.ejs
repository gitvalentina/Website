<% if (user) { %>
	<%- include('./partials/header_logueado') %>
<% } %>
<!-- product detail -->
<div class="container products-wrapper">
	<div class="d-flex align-items-center">
		<h2 class="products-title"><%= product.title %></h2>
		<p class="product-detail-description">
			<a href="/products/<%user.id%>/edit">Editar</a>
		</p>
	</div>
	<div class="product-detail">
		<div class="row">
			<article class="col-12 col-lg-8 product-detail-info">
				<img src="<%= product.photo %>" alt="" class="product-detail-img">
				<p class="product-detail-description">
					Ya sea que se encuentre en casa, en la escuela o en el trabajo, obtenga todo el rendimiento que
					necesita con uno de los procesadores Intel más recientes; así, podrá mantener el orden y hacer que
					sus aplicaciones se ejecuten de manera estable y sin problemas.</p>
			</article>
			<div class="col-12 col-lg-4">
				<section class="comments">
					<% for (let i = 0; i < product.coments.length; i++) { %>
					<article>
						<img src="<%= product.coments[i].photo %>" alt="">
						<div class="data">
							<p class="user">
								<strong> <a href="/users/profile"><%= product.comments[i].nombre_usuario%></a> </strong>
								<%= product.coments[i].content%></p>
						</div>
					</article>
					<% }%>
				</section>
				<form class="form" action="/product" method="post">
					<input class="form-input" name="comentario" type="text" placeholder="Agregar comentario">
					<%if(user) {%>
					<input class="none" name="id" type="number" value="<%=req.session.user.id%>">
					<%  }%>
					<input class="none" name="idProducto" type="number" value="<%=product[0].id%>">
					<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
				</form>
				<hr>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include('./partials/footer.ejs')%>;