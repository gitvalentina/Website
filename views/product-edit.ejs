<% if (user) { %>
<%- include('./partials/header_logueado') %>
<% } else{ %>
<%- include('./partials/header') %>
<%} %>

<body>
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Editar producto</h2>
            </div>
            <form action="/product/<%=producto.id %>/edit" method="post" class="formularios"
                enctype="multipart/form-data">
                <div>
                    <label class="campos" for="">Nombre del producto</label>
                    <input type="text" name="nombre"  value="<%= producto.title%>">
                </div> <br>
                <div>
                    <label class="campos">Descripcion</label>
                    <input type="text" name="descripcion" id="descripcion" value="<%= producto.description%>">
                </div> <br>
                <div>
                    <label class="campos" for="">Imagen</label>
                    <input type="file" name="photo" id="img">
                </div> <br>
                <button type="submit">Guardar y Continuar</button>
            </form>

        </div>
    </div>
</body>

<%- include('./partials/footer.ejs')%>;